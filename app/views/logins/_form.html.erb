<ol class="errors">
  <% @user.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
</ol>

<%= form_for @user do |f| %>

  <ul>
    <li>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :password_digest %>
      <%= f.password_field :password_digest %>
    </li>
  </ul>

  <%= f.submit %>

<% end %>
